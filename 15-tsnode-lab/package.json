{
  "name": "15-tsnode-lab",
  "version": "1.0.0",
  "description": "Intro to NodeJS with TS",
  "repository": "https://github.com/iproduct/fullstack-react-academy",
  "author": "Trayan Iliev",
  "license": "Apache2.0",
  "private": false,
  "main": "./dist/index.js",
  "scripts": {
    "server": "node --inspect=5858 -r ts-node/register ./src/05_server-express.ts",
    "tsc": "tsc -w",
    "start": "nodemon",
    "build": "tsc"
  },
  "dependencies": {
    "express": "^4.17.2",
    "irc": "^0.5.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  },
  "devDependencies": {
    "@types/http-errors": "^1.8.1",
    "@types/node": "^16.11.12",
    "concurrently": "^6.4.0",
    "livereload": "^0.9.3",
    "nodemon": "^2.0.15",
    "tslib": "^2.3.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn run server",
    "ext": "ts"
  }
}
